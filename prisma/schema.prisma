generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


// ===== User & Authentication =====
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  passwordHash  String?
  role          Role      @default(DIGITAL)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  assignedProjects Project[]
  auditLogs        AuditLog[]
  sessions         Session[]
  
  // User Details
  phone         String?
  notes         String?
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token        String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

enum Role {
  OWNER    // Ajans sahibi - tam yetki
  OPS      // Operasyon yöneticisi
  STUDIO   // Stüdyo ekibi
  DIGITAL  // Tasarımcılar, dijital ekip
  CLIENT   // Müşteri
}

// ===== Client & Contract =====
model Client {
  id        String     @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?

  
  // Brand Details
  color             String?    @default("#329FF5")
  logoUrl           String?
  website           String?
  instagram         String?
  socialCredentials String?    @db.Text // JSON string or encrypted text
  notes             String?    @db.Text
  isActive          Boolean    @default(true)
  category          String?    @default("SOSYAL_MEDYA") // SOSYAL_MEDYA, VIDEO, TASARIM, WEB
  
  contracts Contract[]
  
  // Relations
  tasks     Task[]
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Contract {
  id                String   @id @default(cuid())
  clientId          String
  client            Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  // İş kuralları parametreleri
  name              String
  maxRevisions      Int      @default(2)          // Maksimum revizyon hakkı
  paymentTerms      PaymentTerms @default(UPFRONT) // Ödeme koşulları
  rawAssetsIncluded Boolean  @default(false)      // RAW dosyalar dahil mi?
  retainerHours     Int?                          // Aylık retainer saat
  
  projects          Project[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum PaymentTerms {
  UPFRONT      // Peşin ödeme
  NET_15       // 15 gün vadeli
  NET_30       // 30 gün vadeli
  MILESTONE    // Aşama bazlı
}

// ===== Project =====
model Project {
  id           String        @id @default(cuid())
  name         String
  description  String?
  status       ProjectStatus @default(PENDING)
  contractId   String
  contract     Contract      @relation(fields: [contractId], references: [id], onDelete: Cascade)
  assigneeId   String?
  assignee     User?         @relation(fields: [assigneeId], references: [id])
  
  deliverables Deliverable[]
  invoices     Invoice[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

enum ProjectStatus {
  PENDING    // Beklemede - Sözleşme/ödeme bekleniyor
  ACTIVE     // Aktif - Çalışma devam ediyor
  ON_HOLD    // Askıda - Müşteri/ödeme sorunu
  COMPLETED  // Tamamlandı
  ARCHIVED   // Arşivlendi
}

// ===== Deliverable (Teslimat) =====
model Deliverable {
  id              String            @id @default(cuid())
  name            String
  description     String?
  status          DeliverableStatus @default(IN_PROGRESS)
  projectId       String
  project         Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  revisionCount   Int               @default(0)
  
  revisionCycles  RevisionCycle[]
  assets          Asset[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

enum DeliverableStatus {
  IN_PROGRESS        // İç çalışma devam ediyor
  IN_REVIEW          // Müşteri incelemesinde
  APPROVED           // Müşteri onayladı
  DELIVERED          // Teslim edildi
  REVISION_LIMIT_MET // Revizyon limiti doldu
}

// ===== Revision Cycle =====
model RevisionCycle {
  id            String              @id @default(cuid())
  deliverableId String
  deliverable   Deliverable         @relation(fields: [deliverableId], references: [id], onDelete: Cascade)
  status        RevisionCycleStatus @default(OPEN)
  feedback      String?             // Müşteri geri bildirimi
  createdAt     DateTime            @default(now())
  closedAt      DateTime?
}

enum RevisionCycleStatus {
  OPEN        // Müşteri geri bildirimi bekleniyor
  IN_PROGRESS // Revizyon yapılıyor
  CLOSED      // Revizyon tamamlandı
}

// ===== Invoice (Fatura) =====
model Invoice {
  id        String        @id @default(cuid())
  projectId String
  project   Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  amount    Decimal       @db.Decimal(10, 2)
  currency  String        @default("TRY")
  status    InvoiceStatus @default(PENDING)
  dueDate   DateTime?
  paidAt    DateTime?
  notes     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum InvoiceStatus {
  PENDING  // Ödeme bekleniyor
  PAID     // Ödendi
  OVERDUE  // Vadesi geçmiş
  REFUNDED // İade edildi
}

// ===== Asset (Dosya/Varlık) =====
model Asset {
  id            String      @id @default(cuid())
  deliverableId String
  deliverable   Deliverable @relation(fields: [deliverableId], references: [id], onDelete: Cascade)
  name          String
  fileUrl       String
  fileSize      Int?        // Byte cinsinden
  mimeType      String?
  type          AssetType   @default(FINAL)
  isProtected   Boolean     @default(true) // Korumalı (RAW için true)
  createdAt     DateTime    @default(now())
}

enum AssetType {
  FINAL  // Teslim edilecek son çıktı
  RAW    // Kaynak dosyalar (PSD, AI, vb.)
}

// ===== Audit Log (Denetim Kaydı) =====
model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  action      String   // Yapılan işlem (CREATE, UPDATE, TRANSITION, OVERRIDE, vb.)
  entityType  String   // Etkilenen entity tipi (Project, Deliverable, vb.)
  entityId    String   // Etkilenen entity ID
  entityName  String?  // Görüntülenecek isim
  details     Json?    // Ek detaylar (eski/yeni durum, vb.)
  isOverride  Boolean  @default(false) // Kural override mı?
  ipAddress   String?
  createdAt   DateTime @default(now())
}

// ===== Task (Görev Takibi) =====
model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  status      TaskStatus  @default(TODO)
  priority    TaskPriority @default(NORMAL)
  projectId   String?
  assigneeId  String?
  dueDate     DateTime?
  completedAt DateTime?
  
  // Time tracking
  estimatedHours Float?
  actualHours    Float?
  
  // Content Production Fields (Task as Content)
  contentType    String?     // VIDEO, POST, REKLAM, etc.
  publishDate    DateTime?
  sourceType     String?     @default("task") // "task" | "content"
  brandName      String?     // Denormalized for flexibility
  clientId       String?
  client         Client?     @relation(fields: [clientId], references: [id])
  notes          String?     @db.Text // Content specific notes
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
  @@index([assigneeId])
  @@index([projectId])
}

enum TaskStatus {
  TODO        // Yapılacak
  IN_PROGRESS // Devam Ediyor
  IN_REVIEW   // İncelemede
  DONE        // Tamamlandı
  BLOCKED     // Engellendi
}

enum TaskPriority {
  LOW     // Düşük
  NORMAL  // Normal
  HIGH    // Yüksek
  URGENT  // Acil
}

// ===== Calendar Event (Takvim) =====
model CalendarEvent {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        CalendarEventType @default(TASK)
  startDate   DateTime
  endDate     DateTime?
  allDay      Boolean  @default(false)
  
  // İlişkiler
  projectId   String?
  assigneeId  String?
  clientId    String?
  
  // Renk ve görsel
  color       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([startDate])
  @@index([projectId])
}

enum CalendarEventType {
  TASK        // Görev
  MEETING     // Toplantı
  DEADLINE    // Son tarih
  CONTENT     // İçerik yayını
  SHOOT       // Çekim
  REVIEW      // İnceleme
  OTHER       // Diğer
}

// ===== Login Log (Giriş Kayıtları) =====
model LoginLog {
  id        String   @id @default(cuid())
  userId    String
  email     String
  success   Boolean
  ipAddress String?
  userAgent String?
  reason    String?  // Başarısız giriş nedeni
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// ===== Expense (Gider) =====
model Expense {
  id          String        @id @default(cuid())
  title       String
  amount      Decimal       @db.Decimal(10, 2)
  currency    String        @default("TRY")
  category    ExpenseCategory @default(OTHER)
  projectId   String?
  vendorName  String?
  receiptUrl  String?
  notes       String?
  date        DateTime      @default(now())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([category])
  @@index([date])
}

enum ExpenseCategory {
  SALARY      // Maaş
  RENT        // Kira
  SOFTWARE    // Yazılım
  HARDWARE    // Donanım
  MARKETING   // Pazarlama
  TRAVEL      // Seyahat
  FOOD        // Yemek
  UTILITIES   // Faturalar
  FREELANCER  // Freelancer
  OTHER       // Diğer
}

// ===== Income (Gelir) =====
model Income {
  id          String   @id @default(cuid())
  title       String
  amount      Decimal  @db.Decimal(10, 2)
  currency    String   @default("TRY")
  source      String?  // Müşteri/kaynak
  projectId   String?
  invoiceId   String?
  notes       String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}

// ===== Report (Sosyal Medya Raporu) =====
model Report {
  id          String   @id @default(cuid())
  title       String
  clientId    String
  period      String   // "Ocak 2026" gibi
  data        Json     // Tüm rapor verisi (Noco-Rapor formatında)
  status      ReportStatus @default(DRAFT)
  
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?

  @@index([clientId])
  @@index([status])
}

enum ReportStatus {
  DRAFT      // Taslak
  REVIEW     // İncelemede
  PUBLISHED  // Yayınlandı
  ARCHIVED   // Arşivlendi
}

// ===== Notification (Bildirim) =====
model Notification {
  id          String           @id @default(cuid())
  userId      String
  title       String
  message     String
  type        NotificationType @default(INFO)
  read        Boolean          @default(false)
  actionUrl   String?          // Tıklandığında gidilecek sayfa
  
  // İlişkili entity
  entityType  String?          // Project, Deliverable, Invoice, etc.
  entityId    String?
  entityName  String?
  
  createdAt   DateTime         @default(now())
  readAt      DateTime?

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

enum NotificationType {
  INFO        // Genel bilgi
  SUCCESS     // Başarılı işlem
  WARNING     // Uyarı
  ERROR       // Hata
  PAYMENT     // Ödeme bildirimi
  DEADLINE    // Son tarih yaklaşıyor
  REVISION    // Revizyon talebi
  APPROVAL    // Onay bekliyor
}

// ===== Settings (Sistem Ayarları) =====
model Settings {
  id                  String   @id @default("global")
  companyName         String   @default("NOCO Creative Digital Studios")
  timezone            String   @default("Europe/Istanbul")
  language            String   @default("tr")
  currency            String   @default("TRY")
  
  // İş Kuralları
  maxRevisions        Int      @default(3)
  paymentRequired     Boolean  @default(true)
  rawFilesProtected   Boolean  @default(true)
  retainerExpiry      Boolean  @default(true)
  waiverRequired      Boolean  @default(true)
  
  // Bildirimler
  emailEnabled        Boolean  @default(true)
  paymentReminders    Boolean  @default(true)
  deadlineAlerts      Boolean  @default(true)
  daysBeforeDeadline  Int      @default(5)
  
  // Marka
  primaryColor        String   @default("#329FF5")
  logoUrl             String   @default("/logo.svg")
  
  updatedAt           DateTime @updatedAt
}

